{
  "name": "bls-wallet",
  "version": "1.0.0",
  "description": "BLS Wallet smart contract",
  "main": "index.js",
  "engines": {
    "node": ">=16.0.0",
    "yarn": ">=1.0.0"
  },
  "scripts": {
    "build": "hardhat compile",
    "check-ts": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "test": "hardhat test",
