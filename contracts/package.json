    "premerge": "rm -rf artifacts cache typechain-types && hardhat compile && lint && check-ts && yarn --cwd clients premerge && test",
    "start": "./scripts/start.sh",
    "start-hardhat": "./scripts/start-hardhat.sh"
  },
